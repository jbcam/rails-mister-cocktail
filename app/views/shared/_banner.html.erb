<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= @cocktail ?  cl_image_path(@cocktail.url) : image_path(@image) %>);">
  <div class="banner-content">
    <% unless @cocktail %>
      <h1>Mrs Cocktail</h1>
      <p>Find the more popular cocktails</p>
      <form class="form-inline">
      <input type="text" class="form-control mb-2 mr-sm-2" id="search" placeholder="name, ingredient..">
      <button type="submit" class="btn btn-primary mb-2">Search</button>
    </form>
    <% end %>
    <% if @cocktail %>
      <h1><%= @cocktail.name %></h1>
    <% end %>
  </div>
</div>


